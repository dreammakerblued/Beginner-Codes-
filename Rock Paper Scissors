import random

player_score = 0
bot_score = 0

print("=================================================")
print("             Rock, Paper, Scissors!              ")
print("=================================================")


while True:
    start = int(input("To start press 1, to quit press 2: "))

    if start == 1:
        print("\nLet's go noob!\n")
    elif start == 2:
        print("Goodbye, loser!")
        break
    else:
        print("Invalid input, bro. Try again.\n")
        continue  

   
    print("1) Rock 🪨 \n2) Paper 📃 \n3) Scissors ✂️ ")

    player = int(input("Pick a number from 1 to 3: "))

    if player < 1 or player > 3:
        print("Invalid choice! Try again.\n")
        continue

    bot = random.randint(1, 3)

    if player == 1:
        print("You chose Rock 🪨")
    elif player == 2:
        print("You chose Paper 📃")
    elif player == 3:
        print("You chose Scissors ✂️")

    if bot == 1:
        print("Bot chose Rock 🪨")
    elif bot == 2:
        print("Bot chose Paper 📃")
    elif bot == 3:
        print("Bot chose Scissors ✂️")

    if player == bot:
        print("It's a tie!")
    elif (player == 1 and bot == 3) or (player == 2 and bot == 1) or (player == 3 and bot == 2):
        print("You win! Thank God")
        player_score += 1
    else:
        print("You lose, you ugly noob")
        bot_score += 1


    print(f"\nSCORE:\nPlayer: {player_score}\nBot: {bot_score}\n")
# Yay! 
